<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#AFD0F7">

            <ImageButton
                android:id="@+id/vouchersBackButton"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/back"
                app:srcCompat="@drawable/back_arrow" />

            <ImageView
                android:id="@+id/vouchersLogoImage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:contentDescription="@string/logo_alt"
                android:padding="10sp"
                app:srcCompat="@drawable/logo" />

        </FrameLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".Vouchers">

            <TextView
                android:id="@+id/vouchersActivityTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/imprima_regular"
                android:text="@string/vouchers"
                android:textAlignment="center"
                android:textColor="#344870"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/vouchersAmountUntilNextVoucherTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/imprima_regular"
                android:text="@string/vouchers_amount_until_next_voucher"
                android:textAlignment="2"
                android:textColor="#344870"
                android:textSize="28sp"
                android:paddingLeft="10sp"
                android:paddingRight="10sp" />

            <TextView
                android:id="@+id/vouchersAmountUntilNextVoucher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/imprima_regular"
                android:paddingLeft="20sp"
                android:paddingRight="20sp"
                android:text="@string/vouchers_amount_until_next_voucher_placeholder"
                android:textAlignment="2"
                android:textColor="#344870"
                android:textSize="28sp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="463dp"
                android:layout_weight="1"
                android:contentDescription="@string/vouchers_description">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="77sp"
                android:orientation="horizontal"
                android:background="@color/sky_blue"
                android:padding="0sp">

                <ImageButton
                    android:id="@+id/vouchers_navbar_receipts_button"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="0sp"
                    app:srcCompat="@drawable/navbar_receipts_icon"
                    android:background="@color/sky_blue"
                    android:contentDescription="@string/receipts" />

                <ImageButton
                    android:id="@+id/vouchers_navbar_vouchers_button"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_margin="0sp"
                    android:layout_weight="1"
                    android:background="@color/sky_blue"
                    android:contentDescription="@string/vouchers"
                    app:srcCompat="@drawable/navbar_vouchers_icon_higlight" />

                <ImageButton
                    android:id="@+id/vouchers_navbar_qrcode_button"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="0sp"
                    app:srcCompat="@drawable/navbar_qrcode_scan_icon"
                    android:background="@color/sky_blue"
                    android:contentDescription="@string/qrcode_scan" />

                <ImageButton
                    android:id="@+id/vouchers_navbar_shopping_cart_button"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="0sp"
                    app:srcCompat="@drawable/navbar_shopping_cart_icon"
                    android:background="@color/sky_blue"
                    android:contentDescription="@string/shopping_cart" />

                <ImageButton
                    android:id="@+id/vouchers_navbar_profile_button"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_margin="0sp"
                    android:layout_weight="1"
                    android:background="@color/sky_blue"
                    app:srcCompat="@drawable/navbar_profile_icon"
                    android:contentDescription="@string/profile" />
            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>