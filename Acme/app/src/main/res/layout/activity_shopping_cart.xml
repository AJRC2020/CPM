<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ShoppingCart">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:background="#AFD0F7">

        <ImageButton
            android:id="@+id/shoppingCartBackButton"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/back"
            app:srcCompat="@drawable/back_arrow" />

        <ImageView
            android:id="@+id/shoppingCartLogoImage"
            android:layout_width="316dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/logo_alt"
            android:padding="10sp"
            app:srcCompat="@drawable/logo" />

    </FrameLayout>

    <TextView
        android:id="@+id/shoppingCartActivityTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/imprima_regular"
        android:text="@string/shopping_cart"
        android:textAlignment="center"
        android:textColor="#344870"
        android:textSize="50sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>
    <TextView
        android:id="@+id/shoppingCartTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/imprima_regular"
        android:text="@string/shopping_cart_total_placeholder"
        android:textAlignment="center"
        android:textColor="#344870"
        android:textSize="40sp" />

    <Button
        android:id="@+id/shoppingCartCheckoutButton"
        android:layout_width="230sp"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:backgroundTint="#558FFF"
        android:contentDescription="@string/checkout_button_alt"
        android:enabled="true"
        android:fontFamily="@font/imprima_regular"
        android:text="@string/checkout"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:textColor="#fff"
        android:gravity="center"
        android:layout_height="60dp"
        android:layout_marginBottom="15sp"/>

    <ImageView
        android:id="@+id/shopping_cart_navbar"
        android:layout_width="match_parent"
        android:layout_height="77sp"
        android:layout_gravity="end"
        app:srcCompat="@drawable/navbar_shopping_cart" />
</LinearLayout>