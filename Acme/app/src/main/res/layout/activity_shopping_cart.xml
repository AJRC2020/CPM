<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#AFD0F7">

            <ImageButton
                android:id="@+id/shoppingCartBackButton"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/back"
                app:srcCompat="@drawable/back_arrow" />

            <ImageView
                android:id="@+id/shoppingCartLogoImage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:contentDescription="@string/logo_alt"
                android:padding="10sp"
                app:srcCompat="@drawable/logo" />

        </FrameLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".ShoppingCart">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/shoppingCartActivityTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/imprima_regular"
                    android:text="@string/shopping_cart"
                    android:textAlignment="center"
                    android:textColor="#344870"
                    android:textSize="50sp" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="387dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/shoppingList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </androidx.recyclerview.widget.RecyclerView>
                </ScrollView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/total"
                        android:textColor="#344870"
                        android:textSize="40sp" />

                    <TextView
                        android:id="@+id/shoppingCartTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2sp"
                        android:layout_marginEnd="2sp"
                        android:fontFamily="@font/imprima_regular"
                        android:text="@string/placeholder"
                        android:textAlignment="center"
                        android:textColor="#344870"
                        android:textSize="40sp" />

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/euro"
                        android:textColor="#344870"
                        android:textSize="40sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/shoppingCartCheckoutButton"
                    android:layout_width="230sp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="15sp"
                    android:backgroundTint="#558FFF"
                    android:contentDescription="@string/checkout_button_alt"
                    android:enabled="true"
                    android:fontFamily="@font/imprima_regular"
                    android:gravity="center"
                    android:text="@string/checkout"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="30sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="77sp"
                android:background="@color/sky_blue"
                android:orientation="horizontal"
                android:padding="0sp">

                <ImageButton
                    android:id="@+id/shopping_cart_navbar_receipts_button"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_margin="0sp"
                    android:layout_weight="1"
                    android:background="@color/sky_blue"
                    android:contentDescription="@string/receipts"
                    app:srcCompat="@drawable/navbar_receipts_icon" />

                <ImageButton
                    android:id="@+id/shopping_cart_navbar_vouchers_button"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_margin="0sp"
                    android:layout_weight="1"
                    android:background="@color/sky_blue"
                    android:contentDescription="@string/vouchers"
                    app:srcCompat="@drawable/navbar_voucher_icon" />

                <ImageButton
                    android:id="@+id/shopping_cart_navbar_qrcode_button"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_margin="0sp"
                    android:layout_weight="1"
                    android:background="@color/sky_blue"
                    android:contentDescription="@string/qrcode_scan"
                    app:srcCompat="@drawable/navbar_qrcode_scan_icon" />

                <ImageButton
                    android:id="@+id/shopping_cart_navbar_shopping_cart_button"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_margin="0sp"
                    android:layout_weight="1"
                    android:background="@color/sky_blue"
                    android:contentDescription="@string/shopping_cart"
                    app:srcCompat="@drawable/navbar_shopping_cart_icon_higlight" />

                <ImageButton
                    android:id="@+id/shopping_cart_navbar_profile_button"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_margin="0sp"
                    android:layout_weight="1"
                    android:background="@color/sky_blue"
                    android:contentDescription="@string/profile"
                    app:srcCompat="@drawable/navbar_profile_icon" />
            </LinearLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>